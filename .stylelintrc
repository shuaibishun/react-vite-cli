{
    "root": true,
    "customSyntax": "postcss-less",
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-rational-order",
        "stylelint-prettier/recommended",
        "stylelint-config-prettier"
    ],
    "plugins": ["stylelint-less", "stylelint-order"],
    "rules": {
        "indentation": [
            4,
            {
                "except": ["value"],
                "severity": "warning"
            }
        ]
    }
}
