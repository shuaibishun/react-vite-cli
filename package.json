{
    "name": "vite-project",
    "version": "0.0.0",
    "scripts": {
        "dev": "vite --host",
        "build": "tsc && vite build",
        "preview": "vite preview",
        "lint": "pnpm lint:script && pnpm lint:style",
        "lint:script": "eslint src --ext '.js,.jsx,.ts,.tsx'",
        "lint:script-fix": "eslint src --ext '.js,.jsx,.ts,.tsx' --fix",
        "lint:style": "stylelint '**/*.{css,less,scss,sass}'",
        "lint:style-fix": "stylelint '**/*.{css,less,scss,sass}' --fix"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint commitlintrc.config.js -E HUSKY_GIT_PARAMS",
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --ext '.js,.jsx,.ts,.tsx' --fix"
        ],
        "*.{css,less,scss,sass}": [
            "prettier --write",
            "stylelint"
        ]
    },
    "dependencies": {
        "@arco-design/theme-line": "^0.0.3",
        "@arco-design/web-react": "^2.27.1",
        "ahooks": "3.0.3",
        "lodash-es": "^4.17.21",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-router-dom": "^6.2.1",
        "styled-components": "^5.3.3"
    },
    "devDependencies": {
        "@arco-plugins/vite-react": "^1.0.2",
        "@commitlint/cli": "^15.0.0",
        "@commitlint/config-conventional": "^15.0.0",
        "@types/lodash-es": "^4.17.5",
        "@types/react": "^17.0.38",
        "@types/react-dom": "^17.0.11",
        "@types/styled-components": "^5.1.19",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "@vitejs/plugin-react": "^1.1.3",
        "@vitejs/plugin-react-refresh": "^1.3.6",
        "eslint": "8.4.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-import-resolver-typescript": "^2.5.0",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.28.0",
        "eslint-plugin-react-hooks": "^4.3.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.4",
        "less": "^4.1.2",
        "lint-staged": "^12.1.4",
        "prettier": "^2.5.1",
        "stylelint": "14.1.0",
        "stylelint-config-standard": "^24.0.0",
        "stylelint-order": "^5.0.0",
        "typescript": "^4.5.4",
        "vite": "^2.7.7",
        "vite-plugin-windicss": "^1.6.1",
        "windicss": "^3.4.1"
    }
}
